// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int    @id @default(autoincrement())
  name        String
  email       String @unique
  password    String
  credentials Credential[]
  notes       Note[]
  cards       Card[]

  @@map("users")
}

model Credential {
  id        Int @id @default(autoincrement())
  user      User @relation(fields: [userId], references: [id])
  userId    Int
  title     String
  url       String
  username  String
  password  String

  @@unique([title, userId])

  @@map("credentials")
}

model Note {
  id        Int @id @default(autoincrement())
  user      User @relation(fields: [userId], references: [id])
  userId    Int
  title     String
  text       String

  @@unique([title, userId])

  @@map("notes")
}

model Card {
  id          Int @id @default(autoincrement())
  user        User @relation(fields: [userId], references: [id])
  userId      Int
  title     String
  name        String
  number      Int
  cvc         String
  expiration  DateTime
  password    String
  isCredit    Boolean
  isDebit     Boolean

  @@unique([title, userId])

  @@map("cards")
}